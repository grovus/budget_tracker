<% provide(:title, "New category item") %>
<h1>Add Item</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
      <%= f.text_field :name %>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
      <%= link_to_add_fields "Add Category", f, :category %></p>      
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", :manage, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>