<%= simple_form_for(current_user.portfolio, 
      url: {action: "create_categories", controller: "portfolios"},) do |f| %>

  <%= f.input :name %>

  <%= #f.simple_fields_for :categories do |cat_fields| %>
    
    <%= #cat_fields.input :name %>
    <%= f.association :categories, :collection => all_categories %>

    <%= #f.simple_fields_for :items do |item_fields| %>
    	<%= #item_fields.input :name %>
    <% #end %>
      
  <% #end %>
      
  <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
<% end %>

<%= f.input :name, :collection => all_categories, input_html: { multiple: false }, label: 'Category', include_blank: 'Select a category' %>
